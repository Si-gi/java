
abstract public class AbastractReadFile {
File file;


	try {
		InputStream flux = new FileInputStream("file.txt");
		InputStreamReadr lecture = new InputStreamReader(flux);
		BufferReader buff = new BufferedReader(lecture);
		String ligne;
		while((ligne=buff.readline()) != null) {
			System.out.println(ligne);
		}
		buff.close();
	}catch(Exception e) {
		System.out.println(e.toString());
	}
	try{
	InputStream flux=new FileInputStream("test.txt"); 
	InputStreamReader lecture=new InputStreamReader(flux);
	BufferedReader buff=new BufferedReader(lecture);
	String ligne;
	while ((ligne=buff.readLine())!=null){
		System.out.println(ligne);
	}
	buff.close(); 
	}		
	catch (Exception e){
	System.out.println(e.toString());
	}
}
